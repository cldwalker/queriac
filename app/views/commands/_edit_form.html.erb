<div class="floater">
  <%= f.label :name %><br />
  <%= f.text_field :name, :size => 50  %>
</div>

<div class="floater">
  <%= f.label :keyword %><br />
  <%= f.text_field :keyword, :size => 14 %>
</div>

<div class="floatkiller">
  <%= f.label :url, :text => "URL or Javascript Command. (Don't forget to the protocol: http, javascript, aim, etc..)" %><br />
  <%= f.text_field :url, :size => 90 %>
</div>

<div>
  <%= f.label :description, :text => "Description (If command is parametric, please outline all parameters and provide an example query)" %><br />
  <%= f.text_area :description, :cols => 100, :rows => 12  %>
</div>

<div>
	<label for="tags">"Tags (separated by spaces)"</label><br />
	
	<% 
		if params[:tags]
			tag_list = params[:tags]
		elsif @ancestor
			tag_list = @ancestor.tag_string
		else
			tag_list = @command.tag_string
		end
	%>
	
  <%= text_field_tag :tags, tag_list, {:size => 90} %>
</div>

<div class="floater">
  <%= f.check_box :public, {:onclick => "handle_publicity_checkboxes(this);"} %> <%= f.label :public, :text => "Publicize this command" %>
</div>

<div class="floater">
  <%= f.check_box :public_queries %> <%= f.label :public_queries, :text => "Publicize queries on this command too", :id => "command_public_queries_label" %>
</div>