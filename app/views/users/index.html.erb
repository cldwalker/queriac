<h1 class="inline">
	All Users
</h1>

<hr />

<table class="top_spaced">
	<tr>
		<th>Username</th>
		<th class="centered">Commands</th>
		<th class="centered">Queries</th>
		<th>Signup Date</th>
	</tr>
	
	<% for user in @users %>
		<tr <%= cycle('class="offset"', '') -%>>	
			<td><b><%= link_to user.login, user.home_path %></b></td>
			<td class="centered"><%= user.commands.empty? ? "<span class=\"faded\">0</span>" : link_to(user.commands.count, user.commands_path) %></td>
			<td class="centered"><%= user.queries.empty? ? "<span class=\"faded\">0</span>" : link_to(user.queries.count, user.queries_path) %></td>
			<td><%= time_ago_in_words_or_date user.created_at %></td>
		</tr>
	<% end %>
</table>

<%= will_paginate @users %>