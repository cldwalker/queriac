<html xmlns="http://www.w3.org/1999/xhtml">

	<head>
		<title><%= render_page_title %></title>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<%= stylesheet_link_tag 'base' %>
		<%= javascript_include_tag :defaults %>		
	</head>
	
	<body>
	
		<div class="container">
		  <div id="header">

		    <div id="mininav">
					<%= render_mininav %>
		    </div>
		
		    <div id="logo">
					<%= render_nav %>
				</div>
				
		    <div id="nav">
		    </div>

		  </div><!--> end #header </!-->
		
		  <div id="content">
         <%= flash_div %>
         <%= yield %>
		  </div><!--> end #content </!-->
		
		</div><!--> end #container </!-->
	
		<div id="footer">
		</div>
		<!--> end #footer </!-->

	
	</body>
</html>

